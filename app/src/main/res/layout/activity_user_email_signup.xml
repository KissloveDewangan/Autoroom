        <!--android:hint="Last name"-->
        <!--android:textColor="@color/lightBlack"-->
        <!--android:textColorHint="@color/blackshade1"-->
        <!--android:textSize="14sp" />-->

        <EditText
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/rounded_white_edittext"
            android:hint="New Password"
            android:imeOptions="actionDone"
            android:inputType="text"
            android:textColor="@color/lightBlack"
            android:textColorHint="@color/blackshade1"
            android:textSize="14sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_email_login"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginTop="24dp"
            android:gravity="left"
            android:text="By signing up, I agree to Autoroom Terms of Service and Privacy Policy."
            android:textColor="@color/lightBlack"
            android:textSize="12sp" />


        <Button
            android:id="@+id/b_signup"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/rounded_corners"
            android:text="Sign up"
            android:textAllCaps="false"
            android:textColor="@color/pureWhite"
            android:textSize="16sp"
            android:textStyle="bold" />

        <View
            android:id="@+id/border_below_select_item"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@color/whiteShade" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="Already have an Autoroom account?"
                android:textColor="@color/lightBlack"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_signin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@drawable/red_square_corner"
                android:text="Log in"
                android:textColor="@color/highlightColor"
                android:textSize="14sp" />
        </RelativeLayout>

    </LinearLayout>
</ScrollView>