<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_select_old_new"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/first_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:text="I am looking for product which is"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_select_old"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/first_text"
                android:layout_marginBottom="20dp"
                android:layout_marginRight="16dp"
                android:layout_toLeftOf="@+id/tv_slash"
                android:background="@drawable/black_rounded_corners"
                android:text="Used"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_slash"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/first_text"
                android:layout_centerHorizontal="true"
                android:text="/"
                android:textColor="@color/black"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/tv_select_new"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/first_text"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="16dp"
                android:layout_toRightOf="@+id/tv_slash"
                android:background="@drawable/black_rounded_corners"
                android:text="Newest"
                android:textColor="@color/black"
                android:textSize="12sp" />
        </RelativeLayout>

        <View
            android:id="@+id/border_below_first_text"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/rl_select_old_new"
            android:background="@color/whiteShade" />

        <RelativeLayout
            android:id="@+id/rl_price_range"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/border_below_first_text">

            <TextView
                android:id="@+id/tv_pricerange"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:text="Price Range"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_pricerange"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="20dp"
                android:text="Rs 100 - Rs 2000"
                android:textColor="@color/black"
                android:textSize="12sp" />
        </RelativeLayout>

        <View
            android:id="@+id/border_below_price_range"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/rl_price_range"
            android:background="@color/whiteShade" />

        <RelativeLayout
            android:id="@+id/rl_choose_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/border_below_price_range">

            <TextView
                android:id="@+id/text_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:text="Select Categories"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_category"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="20dp"
                android:text="Include electronics, appliances, automobile, etc."
                android:textColor="@color/black"
                android:textSize="12sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <View
            android:id="@+id/border_below_choose_category"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/rl_choose_category"
            android:background="@color/whiteShade" />

        <RelativeLayout
            android:id="@+id/rl_select_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/border_below_choose_category">

            <TextView
                android:id="@+id/text_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:text="Are you searching for"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/item_name_car"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_item"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/black_rounded_corners"
                android:text="Cars"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/item_name_bicycle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_item"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/item_name_car"
                android:background="@drawable/black_rounded_corners"
                android:text="Bicycle"
                android:textColor="@color/black"
                android:textSize="14sp" />
        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/b_see_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <View
            android:id="@+id/border_below_select_item"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/whiteShade" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="36dp"
            android:layout_marginRight="36dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/rounded_corners"
            android:text="See 200+ Results"
            android:textAllCaps="false"
            android:textColor="@color/pureWhite"
            android:textSize="14sp"
            android:textStyle="bold" />
    </RelativeLayout>

</RelativeLayout>