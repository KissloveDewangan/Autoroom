<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="72dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_profile_pic"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16dp" />

    <RelativeLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_toRightOf="@+id/iv_profile_pic"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_nmsg"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_toRightOf="@+id/tv_name"
            android:background="@drawable/accent_circle_view"
            android:gravity="center"
            android:text="8"
            android:textColor="@color/pureWhite"
            android:textSize="8sp" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="4dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:maxWidth="210dp"
            android:text="Kisslove Dewangan"
            android:textColor="@color/primary_text"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_name"
            android:layout_marginRight="54dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="This is a sample text."
            android:textColor="@color/secondary_text"
            android:textSize="12sp" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_more"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:alpha="0.38"
        android:padding="14dp"
        android:src="@drawable/ic_more_vert_black_24dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignLeft="@+id/ll"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/ll"
        android:layout_marginRight="16dp"
        android:background="@color/divider" />
</RelativeLayout>