<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pureWhite"
    android:orientation="vertical"
    android:weightSum="10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/user_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="42dp"
                android:textColor="@color/primary_text"
                android:textSize="32sp"
                android:textStyle="bold" />

            <in.co.opensoftlab.yourstore.views.MaterialRippleLayout
                android:id="@+id/mrl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/user_name"
                android:layout_marginLeft="20dp"
                app:mrl_rippleColor="@color/primary_light"
                app:mrl_rippleOverlay="true">

                <TextView
                    android:id="@+id/user_edit_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="8dp"
                    android:text="View profile"
                    android:textColor="@color/secondary_text"
                    android:textSize="16sp" />
            </in.co.opensoftlab.yourstore.views.MaterialRippleLayout>

            <View
                android:id="@+id/border_below_edit_profile"
                android:layout_width="72dp"
                android:layout_height="1dp"
                android:layout_below="@+id/mrl"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="12dp"
                android:background="@color/divider" />

            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/image"
                android:layout_width="58dp"
                android:layout_height="58dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:layout_marginTop="46dp"
                app:civ_border_color="#FFFFFF"
                app:civ_border_width="1dp" />
        </RelativeLayout>

        <in.co.opensoftlab.yourstore.views.MaterialRippleLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:mrl_rippleColor="@color/primary_light"
            app:mrl_rippleOverlay="true">

            <RelativeLayout
                android:id="@+id/rl_invite_friends"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="Invite friends"
                    android:textColor="@color/secondary_text"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/icon_send"
                    android:tint="@color/secondary_text" />

            </RelativeLayout>
        </in.co.opensoftlab.yourstore.views.MaterialRippleLayout>

        <View
            android:id="@+id/border_below_invite_friends"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@color/divider" />

        <in.co.opensoftlab.yourstore.views.MaterialRippleLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:mrl_rippleColor="@color/primary_light"
            app:mrl_rippleOverlay="true">

            <RelativeLayout
                android:id="@+id/rl_user_switch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp">

                <TextView
                    android:id="@+id/tv_user_switch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Switch to Seller"
                    android:textColor="@color/secondary_text"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:padding="2dp"
                    android:src="@drawable/icon_switch"
                    android:tint="@color/secondary_text" />
            </RelativeLayout>
        </in.co.opensoftlab.yourstore.views.MaterialRippleLayout>

        <View
            android:id="@+id/border_below_user_switch"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@color/divider" />

        <in.co.opensoftlab.yourstore.views.MaterialRippleLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:mrl_rippleColor="@color/primary_light"
            app:mrl_rippleOverlay="true">

            <RelativeLayout
                android:id="@+id/rl_settings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Settings"
                    android:textColor="@color/secondary_text"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:padding="2dp"
                    android:src="@drawable/icon_settings"
                    android:tint="@color/secondary_text" />
            </RelativeLayout>
        </in.co.opensoftlab.yourstore.views.MaterialRippleLayout>

        <View
            android:id="@+id/border_below_user_settings"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@color/divider" />

        <in.co.opensoftlab.yourstore.views.MaterialRippleLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:mrl_rippleColor="@color/primary_light"
            app:mrl_rippleOverlay="true">

            <RelativeLayout
                android:id="@+id/rl_help"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="About and Help"
                    android:textColor="@color/secondary_text"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:padding="2dp"
                    android:src="@drawable/icon_help"
                    android:tint="@color/secondary_text" />
            </RelativeLayout>

        </in.co.opensoftlab.yourstore.views.MaterialRippleLayout>

        <View
            android:id="@+id/border_below_profile_help"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@color/divider" />

        <in.co.opensoftlab.yourstore.views.MaterialRippleLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:mrl_rippleColor="@color/primary_light"
            app:mrl_rippleOverlay="true">

            <RelativeLayout
                android:id="@+id/rl_feedback"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Give us feedback"
                    android:textColor="@color/secondary_text"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/icon_feedback"
                    android:tint="@color/secondary_text" />
            </RelativeLayout>
        </in.co.opensoftlab.yourstore.views.MaterialRippleLayout>

        <View
            android:id="@+id/border_below_profile_feedback"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/rl_feedback"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@color/divider" />
    </LinearLayout>
</ScrollView>